{{- $FRONTEND_WORKER_PROC        := default .Env.FRONTEND_WORKER_PROC "1" -}}
{{- $FRONTEND_WORKER_CONN        := default .Env.FRONTEND_WORKER_CONN "1024" -}}
{{- $FRONTEND_KEEPALIVE_REQUESTS := default .Env.FRONTEND_KEEPALIVE_REQUESTS "100" -}}
{{- $FRONTEND_KEEPALIVE_TIMEOUT  := default .Env.FRONTEND_KEEPALIVE_TIMEOUT "10" -}}
{{- $FRONTEND_MAX_BODY_SIZE      := default .Env.FRONTEND_MAX_BODY_SIZE "50m" -}}
{{- $BACKEND_LISTEN_SSL          := default .Env.BACKEND_LISTEN_SSL "false" -}}
{{- $BACKEND_LISTEN_HOST         := default .Env.BACKEND_LISTEN_HOST "localhost:8080" -}}
{{- $EVENTS_LISTEN_SSL           := default .Env.EVENTS_LISTEN_SSL "false" -}}
{{- $EVENTS_LISTEN_HOST          := default .Env.EVENTS_LISTEN_HOST "localhost:8888" -}}
user nginx;
error_log /dev/stderr warn;
worker_processes {{ $FRONTEND_WORKER_PROC }};

events {
  worker_connections  {{ $FRONTEND_WORKER_CONN }};
  use epoll;
}

http {
  include      /etc/nginx/mime.types;
  default_type application/octet-stream;

  log_format main '$remote_addr - $remote_user [$time_local] "$request" '
                  '$status $body_bytes_sent "$http_referer" '
                  '"$http_user_agent" "$http_x_forwarded_for"';

  access_log /dev/stdout main;

  map $http_upgrade $connection_upgrade {
    default upgrade;
    '' close;
  }

  server {
    listen                      8000 default_server;
    server_name                 _;
    charset                     utf-8;
    server_tokens               off;
    sendfile                    on;
    tcp_nopush                  on;
    tcp_nodelay                 on;
    keepalive_requests          {{ $FRONTEND_KEEPALIVE_REQUESTS }};
    keepalive_timeout           {{ $FRONTEND_KEEPALIVE_TIMEOUT }};
    client_max_body_size        {{ $FRONTEND_MAX_BODY_SIZE }};
    large_client_header_buffers 4 32k;

    location / {
      root /taiga-frontend;
      try_files $uri $uri/ /index.html;
    }

    location /media {
{{- if isTrue $BACKEND_LISTEN_SSL }}
      proxy_pass https://{{ $BACKEND_LISTEN_HOST }}/media;
{{- else }}
      proxy_pass http://{{ $BACKEND_LISTEN_HOST }}/media;
{{- end }}
      proxy_set_header Host $http_host;
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Scheme $scheme;
      proxy_set_header X-Forwarded-Proto $scheme;
      proxy_set_header X-Forwarded-Server $host;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_redirect off;
    }

    location /api {
{{- if isTrue $BACKEND_LISTEN_SSL }}
      proxy_pass https://{{ $BACKEND_LISTEN_HOST }}/api;
{{- else }}
      proxy_pass http://{{ $BACKEND_LISTEN_HOST }}/api;
{{- end }}
      proxy_set_header Host $http_host;
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Scheme $scheme;
      proxy_set_header X-Forwarded-Proto $scheme;
      proxy_set_header X-Forwarded-Server $host;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_redirect off;
    }

    location /admin {
{{- if isTrue $BACKEND_LISTEN_SSL }}
      proxy_pass https://{{ $BACKEND_LISTEN_HOST }}/admin;
{{- else }}
      proxy_pass http://{{ $BACKEND_LISTEN_HOST }}/admin;
{{- end }}
      proxy_set_header Host $http_host;
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Scheme $scheme;
      proxy_set_header X-Forwarded-Proto $scheme;
      proxy_set_header X-Forwarded-Server $host;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_redirect off;
    }

    location /events {
{{- if isTrue $EVENTS_LISTEN_SSL }}
      proxy_pass https://{{ $EVENTS_LISTEN_HOST }}/events;
{{- else }}
      proxy_pass http://{{ $EVENTS_LISTEN_HOST }}/events;
{{- end }}
      proxy_http_version 1.1;
      proxy_set_header Upgrade $http_upgrade;
      proxy_set_header Connection $connection_upgrade;
      proxy_set_header Host $http_host;
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Scheme $scheme;
      proxy_set_header X-Forwarded-Proto $scheme;
      proxy_set_header X-Forwarded-Server $host;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_connect_timeout 7d;
      proxy_send_timeout 7d;
      proxy_read_timeout 7d;
    }
  }
}
